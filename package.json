{
	"name": "talk-small",
	"publisher": "dhruvin-dev",
	"version": "0.0.3",
	"engines": {
		"vscode": "^1.51.0"
	},
	"license": "MIT",
	"displayName": "Talk Small",
	"description": "Push to Talk for VSCode (powered by jitsi). Developed during Mattermost Hackathon 2020.",
	"categories": [
		"Other"
	],
	"preview": true,
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Talk Small",
			"properties": {
				"talk-small.displayName": {
					"type": "string",
					"default": "Fellow Jitser",
					"markdownDescription": "Your display name. It will be shown to participants of the call."
				}
			}
		},
		"views": {
			"talk-small": [
				{
					"id": "talk-small",
					"name": "Talk Small",
					"type": "webview",
					"icon": "/out/icon.svg"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "talk-small",
					"title": "Talk Small",
					"icon": "/out/icon.svg"
				}
			]
		},
		"menus": {
			"commandPalette": [
				{
					"command": "talk-small.connect",
					"when": "talk-small:connected != true"
				},
				{
					"command": "talk-small.disconnect",
					"when": "talk-small:connected == true"
				}
			],
			"view/title": [
				{
					"command": "talk-small.connect",
					"when": "talk-small:connected != true",
					"group": "navigation"
				},
				{
					"command": "talk-small.disconnect",
					"when": "talk-small:connected == true",
					"group": "navigation"
				}
			]
		},
		"commands": [
			{
				"command": "talk-small.connect",
				"title": "Connect",
				"category": "Talk Small"
			},
			{
				"command": "talk-small.disconnect",
				"title": "Disconnect",
				"category": "Talk Small"
			}
		]
	},
	"activationEvents": [
		"onView:talk-small",
		"onCommand:talk-small.connect"
	],
	"qna": "https://hackathon.cloud.mattermost.com/main/channels/idea-talk-small",
	"repository": {
		"type": "git",
		"url": "https://github.com/dhruvin2910/talk-small.git"
	},
	"scripts": {
		"lint": "eslint .",
		"build": "rollup -c",
		"watch": "rollup -cw",
		"vscode:prepublish": "npm run lint && NODE_ENV=production npm run build"
	},
	"devDependencies": {
		"@fortawesome/fontawesome-free": "^5.15.1",
		"@fortawesome/fontawesome-svg-core": "^1.2.32",
		"@fortawesome/free-solid-svg-icons": "^5.15.1",
		"@jitsi/js-utils": "^1.0.2",
		"@rollup/plugin-commonjs": "^16.0.0",
		"@rollup/plugin-node-resolve": "^10.0.0",
		"@rollup/plugin-replace": "^2.3.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.51.0",
		"builtin-modules": "^3.1.0",
		"eslint": "^7.9.0",
		"html-minifier-terser": "^5.1.1",
		"immer": "^7.0.14",
		"postcss": "^7.0.35",
		"postcss-import": "^12.0.1",
		"postcss-url": "^9.0.0",
		"rollup": "^2.33.1",
		"rollup-plugin-copy": "^3.3.0",
		"rollup-plugin-postcss": "^3.1.8",
		"rollup-plugin-svelte": "^6.1.1",
		"rollup-plugin-terser": "^7.0.2",
		"svelte": "^3.29.7"
	}
}
